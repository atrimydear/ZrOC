author = {Bin Du and Saidi Wang and Linwei Guo and Yimin Ouyang and Hanwei Cheng and Yajuan Cheng and Tao Zhang},
title = {Design and fabrication of (Hf0.25Zr0.25Ta0.25Nb0.25)C–SiC ceramics with improved microwave absorbing properties via PDC route},
year = {2025},
journal = {Journal of Advanced Ceramics},
volume = {14},
number = {1},
